# Dockerfile.dev - Backend (Desenvolvimento)
FROM node:22-alpine

WORKDIR /app

# Copia apenas package.json e package-lock.json
COPY package*.json ./

# Instala dependências (incluindo dev)
RUN npm install

# Copia o restante do código
COPY . .

EXPOSE 3001
ENV TZ=America/Sao_Paulo

# Hot reload (ts-node-dev ou nodemon)
CMD ["npm", "run", "dev"]
