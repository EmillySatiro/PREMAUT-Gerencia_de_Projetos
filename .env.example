# Copie este arquivo para .env e preencha com seus valores reais

# ======================================
# SUPABASE CONFIGURATION
# ======================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_KEY=your-anon-public-key-here

# ======================================
# DATABASE CONFIGURATION  
# ======================================
DATABASE_URL=postgresql://user:password@localhost:5432/premaut_db

# ======================================
# EMAIL CONFIGURATION (NODEMAILER)
# ======================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM=noreply@premaut.com

# ======================================
# AUTHENTICATION SECRETS
# ======================================
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# ======================================
# APPLICATION CONFIGURATION
# ======================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ======================================
# STORAGE CONFIGURATION
# ======================================
UPLOAD_MAX_SIZE=10485760  # 10MB em bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png,.gif

# ======================================
# SECURITY CONFIGURATION
# ======================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000  # 15 minutos em ms
RATE_LIMIT_MAX=100        # mÃ¡ximo de requests por janela

# ======================================
# DEVELOPMENT TOOLS
# ======================================
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
NEXT_TELEMETRY_DISABLED=1
NEXT_PRIVATE_NO_TURBOPACK=1